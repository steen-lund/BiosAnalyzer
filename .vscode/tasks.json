{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"problemMatcher": [
		{
			"owner": "cpp",
			"fileLocation": ["relative", "${workspaceRoot}"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(fatal\\s+)?(warning|error):\\s+(.*)$",
				"file": 1,
				"line": 2,
				"column": 3,
				"severity": 5,
				"message": 6
			}
		}
	],
	"tasks": [
		{
			"label": "Build",
			"group":"build",
			"command": "make",
			"type":"shell",
			"presentation": {
				"reveal": "always"
			}
		}
	]
}
